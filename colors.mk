BLUE						:= "\x1B[34m"
MAGENTA						:= "\x1B[35m"
CYAN						:= "\x1B[36m"
CARG1						= $(1)$(2)$(RES)
CARG2						= $(call CARG1, $(1), $(2)) $(call CARG1,\
								$(3), $(4))

endif
